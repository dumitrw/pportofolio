---
import "@styles/global.css"
import BaseHead from "@components/BaseHead.astro"
import Header from "@components/Header.astro"
import Footer from "@components/Footer.astro"
import Drawer from "@components/Drawer.astro"
const { title, description } = Astro.props
import { SITE } from "@consts"
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
  </head>
  <body>
    <Header />
    <Drawer />
    <main>
      <div id="transition-screen" class="transition">
        <img id="logo" src="https://i.imgur.com/JaJA3rv.png" alt="Logo" class="logo"/>
      </div>

      <!-- Folosim client:only pentru a încărca scriptul doar pe client -->
      <Fragment client:only>
        <script>
          document.addEventListener("DOMContentLoaded", function() {
            console.log("Documentul este gata!");
            const transitionElement = document.getElementById("transition-screen");

            // Verificăm dacă tranzitia a fost deja afișată în această sesiune (folosind sessionStorage)
            if (transitionElement) {
              if (!sessionStorage.getItem("hasVisited")) {
                console.log("Prima vizitare, tranzitia va apărea.");
                sessionStorage.setItem("hasVisited", "true");

                // Așteptăm 4 secunde înainte de a începe tranziția
                setTimeout(() => {
                  transitionElement.classList.add("fade-out");

                  // Ascundem tranzitia după 1.5 secunde (durata tranzitiei)
                  setTimeout(() => {
                    transitionElement.classList.add("hidden");
                  }, 3000);
                }, 4000);
              } else {
                console.log("Sesiunea a fost deja vizitată, tranzitia nu va apărea.");
                transitionElement.classList.add("hidden");
              }
            } else {
              console.error("Elementul cu ID-ul 'transition-screen' nu a fost găsit.");
            }
          });
        </script>
      </Fragment>

      <slot />
    </main>
    <Footer />
  </body>
</html>

